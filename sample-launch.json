{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/bin/www",
      "env": {
        "NODE_ENV": "development",
        "TENANT_TOKEN": "123"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Test",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": ["-R", "spec", "${workspaceFolder}/test", "${workspaceFolder}/test/**/*.js"],
      "env":{
        "NODE_ENV": "test",
        "TENANT_TOKEN": "123"
      }
    }
  ]
}